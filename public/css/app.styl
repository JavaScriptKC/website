html, *
    margin 0
    padding 0

body
    background #46483E url('images/bgpattern.png')
    height 100%

a
    color #8CC84B

#wrapper
    width 1024px
    margin 0 auto
    height 100%
    font-weight bold
    color #D2D8BA
    font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
    font-size 2em
    text-align center

    h1
        margin 30px 0 10px 0
        height 200px
        max-width 100%
        min-width 900px
        background url('images/nodekc-dark.png') no-repeat center center
        text-indent -90000px

    p
        font-size .8em
        padding-top 1em
#panels
    list-style-type none
    li.panel
        float left
        width 300px
        text-align left
        background-color #222
        padding 10px
        margin-top 15px
        margin-left 10px
        height 160px
        overflow auto
        ul
            padding 0
            margin-left 10px
            list-style-type none
        h2
            font-size .6em
        a.message
            font-size .5em
        p.teaser
            font-size .5em
            margin 0
            text-indent .4em
            padding 0
    li.panel.tweets
        p.tweet
            font-size 1em
        span
            font-size .5em
            color #ccc
            margin-bottom 5px
            margin-left 3px
            text-decoration underline

