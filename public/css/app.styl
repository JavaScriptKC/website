html, *
    margin 0
    padding 0

body
    background #46483E url('images/bgpattern.png')
    height 100%

a
    color #8CC84B

#wrapper
    width 1024px
    margin 0 auto
    height 100%
    font-weight bold
    color #D2D8BA
    font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
    text-align center

    h1
        margin 30px 0 10px 0
        height 200px
        max-width 100%
        min-width 900px
        background url('images/nodekc-dark.png') no-repeat center center
        text-indent -90000px

#panels
    list-style-type none
    li.panel
        float left
        width 300px
        text-align left
        background-color #222
        padding 10px
        margin-top 15px
        margin-left 10px
        height 230px
        overflow auto

        .title 
            font-size 14px
        ul
            padding 0
            margin-left 10px
            list-style-type none
        h2
            font-size 20px
            clear both
            margin-bottom 10px
        a.message
            font-size .5em
        .time
            font-size 11px
            color #888
        .teaser
            font-size 12px
.tweets .avatar
    float left
    margin-right 10px
p.join
    clear both
    margin-top 10px

