html, *
    margin 0
    padding 0
    
body
    background transparent url('images/bgpattern.png')
    height 100%

a
    color #73A53E

#wrapper
    width 1024px
    margin 0 auto
    height 100%
    font-weight bold
    color white
    font-family sans-serif
    font-size 2em
    text-align center

    h1
        text-shadow 0.1em 0.1em 0.2em black
        padding-top 1em

    p
        font-size .8em
        padding-top 1em
#panels
    list-style-type none
    li.panel
        float left
        width 300px
        text-align left
        background-color #222
        padding 10px
        margin-top 15px
        margin-left 10px
        height 160px
        ul 
            padding 0
            margin-left 10px
            list-style-type none
        h2 
            font-size .6em
        a 
            font-size .5em
        p 
            font-size .5em
            margin 0
            text-indent .4em
            padding 0

